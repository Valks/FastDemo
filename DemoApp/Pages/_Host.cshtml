@page "/"
@namespace DemoApp.Pages
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>DemoApp</title>
    <base href="~/" />
    <link rel="stylesheet" href="css/bootstrap/bootstrap.min.css" />
    <link href="css/site.css" rel="stylesheet" />
</head>
<body>
    <fast-design-system-provider use-defaults>
        <app>
            <component type="typeof(App)" render-mode="ServerPrerendered" />
        </app>

        <div id="blazor-error-ui">
            <environment include="Staging,Production">
                An error has occurred. This application may no longer respond until reloaded.
            </environment>
            <environment include="Development">
                An unhandled exception has occurred. See browser dev tools for details.
            </environment>
            <a href="" class="reload">Reload</a>
            <a class="dismiss">🗙</a>
        </div>
    </fast-design-system-provider>
    <script src="_framework/blazor.server.js"></script>
    
    <script type="module" src="https://unpkg.com/@@microsoft/fast-colors"></script>
    <script type="module" src="https://unpkg.com/@@microsoft/fast-components"></script>
    <!--<script type="module" src="https://unpkg.com/@@microsoft/fast-components-msft"></script>-->
    <script type="module" src="https://unpkg.com/@@microsoft/fast-element"></script>
    
    <script type="module" src="_content/Microsoft.FluentUI/bundle.js"></script>
</body>
</html>
